<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane focusTraversable="true" nodeOrientation="LEFT_TO_RIGHT" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mheistermind.Controllermodejeu">
   <children>
      <MenuBar AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <menus>
          <Menu mnemonicParsing="false" text="Aide">
               <items>
                  <MenuItem mnemonicParsing="false" text="Mode facile : 4 pions &amp; 12 essais" />
                  <MenuItem mnemonicParsing="false" text="Mode difficile : 5 pions &amp; 10 essais" />
               </items>
          </Menu>
        </menus>
      </MenuBar>
      <BorderPane focusTraversable="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="25.0">
         <center>
            <VBox focusTraversable="true" BorderPane.alignment="CENTER">
               <children>
                  <AnchorPane focusTraversable="true" VBox.vgrow="ALWAYS">
                     <children>
                        <TextField alignment="CENTER" disable="true" text="Choisissez votre mode de jeu :" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <padding>
                              <Insets left="10.0" top="30.0" />
                           </padding>
                           <font>
                              <Font name="SimSun-ExtB" size="16.0" />
                           </font>
                        </TextField>
                     </children>
                  </AnchorPane>
                  <AnchorPane focusTraversable="true" VBox.vgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER" focusTraversable="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#handleButtonCouleurFacile" text="Couleur Facile" textAlignment="JUSTIFY" textFill="#111010" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets left="10.0" right="5.0" top="30.0" />
                                 </HBox.margin>
                                 <font>
                                    <Font name="Baskerville Old Face" size="12.0" />
                                 </font>
                              </Button>
                              <Button mnemonicParsing="false" onAction="#handleButtonDaltonienFacile" text="Daltonien Facile" textAlignment="JUSTIFY" textFill="#1e1d1d" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets left="5.0" right="10.0" top="30.0" />
                                 </HBox.margin>
                                 <font>
                                    <Font name="Baskerville Old Face" size="12.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </AnchorPane>
                  <AnchorPane focusTraversable="true" VBox.vgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER" focusTraversable="true" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#handleButtonCouleurDifficile" text="Couleur Difficile" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                                 <font>
                                    <Font name="Baskerville Old Face" size="12.0" />
                                 </font></Button>
                              <Button mnemonicParsing="false" onAction="#handleButtonDaltonienDifficile" text="Daltonien Difficile" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                                 <font>
                                    <Font name="Baskerville Old Face" size="12.0" />
                                 </font></Button>
                           </children>
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                        </HBox>
                     </children>
                  </AnchorPane>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
